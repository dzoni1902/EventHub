@model EventHub.ViewModels.EventsViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.Heading</h1>
@using (Html.BeginForm("Search", "Events"))
{
    <div class="form-group">
        <div id="searchEvents" class="input-group">
            @Html.TextBoxFor(m => m.SearchTerm, new {@class = "form-control", placeholder = "Search by Artist, Genre or Location..." })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div> 
}
<ul class="events vertical-offset4">
    @foreach (var evnt in Model.UpcomingEvents)
    {
        <li>
            <div class="date">
                <div class="month">@evnt.DateTime.ToString("MMM")</div>
                <div class="day">@evnt.DateTime.ToString("d ")</div>
            </div> 
            <div class="details">
                <span class="artist">
                    @evnt.Artist.Name
                    
                    @if (evnt.IsCanceled)
                    {
                        <span class="label label-warning">Canceled</span>
                    }
                    @if (Model.ShowActions)
                    {
                        <button data-followee-id="@evnt.ArtistId" class="btn btn-link btn-sm js-toggle-follow">Follow</button>
                    }
                </span>
                <span class="genre">@evnt.Genre.Name</span>
                @if (Model.ShowActions && !evnt.IsCanceled)
                {
                    <button data-event-id="@evnt.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going ?</button>
                }
            </div>      
        </li>
        }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function(e) {
                //making an ajax call to the API using POST method:
                var button = $(e.target);
                $.post("/api/attendances", { EventId: button.attr("data-event-id") })
                    .done(function() {
                        button.removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function() {
                        alert("Something failed!");
                });
            });

            $(".js-toggle-follow").click(function(e) {
                var button = $(e.target);
                $.post("/api/followings", { FolloweeId: button.attr("data-followee-id") })
                    .done(function() {
                        button.text("Following");
                    })
                    .fail(function() {
                        alert("Something failed!");
                    });
            });
        });
    </script>
}